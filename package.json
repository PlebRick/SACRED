{
  "name": "sacred",
  "private": true,
  "version": "0.0.2",
  "description": "Personal Bible study app with rich text notes, commentary, and sermon management",
  "author": "SACRED",
  "license": "MIT",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "dev:server": "PORT=3001 node server/index.cjs",
    "build": "vite build",
    "start": "NODE_ENV=production node server/index.cjs",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "electron .",
    "electron:build": "vite build && electron-builder --mac",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@tiptap/extension-placeholder": "^2.10.4",
    "@tiptap/react": "^2.10.4",
    "@tiptap/starter-kit": "^2.10.4",
    "better-sqlite3": "^12.6.2",
    "express": "^5.2.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "vite": "^5.4.11"
  },
  "build": {
    "appId": "com.sacred.bible-study",
    "productName": "SACRED",
    "directories": {
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.reference",
      "target": [
        "dmg"
      ],
      "icon": "build/icon.png",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "title": "SACRED"
    },
    "files": [
      "dist/**/*",
      "server/**/*",
      "electron/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "node_modules/better-sqlite3/**/*"
    ],
    "npmRebuild": true
  }
}
