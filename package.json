{
  "name": "sacred",
  "private": true,
  "version": "0.0.5",
  "description": "Personal Bible study app with rich text notes, commentary, and sermon management",
  "author": "SACRED",
  "license": "MIT",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "dev:server": "PORT=3001 node server/index.cjs",
    "dev:all": "./scripts/dev.sh",
    "build": "vite build",
    "start": "NODE_ENV=production node server/index.cjs",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "electron .",
    "electron:build": "vite build && electron-builder --mac",
    "postinstall": "electron-builder install-app-deps",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:component": "vitest run tests/component",
    "test:e2e": "playwright test --config=tests/e2e/playwright.config.ts",
    "test:e2e:web": "playwright test --config=tests/e2e/playwright.config.ts --project=chromium",
    "test:e2e:electron": "playwright test --config=tests/e2e/playwright.config.ts --project=electron",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@tiptap/extension-placeholder": "^2.10.4",
    "@tiptap/react": "^2.10.4",
    "@tiptap/starter-kit": "^2.10.4",
    "better-sqlite3": "^12.6.2",
    "cheerio": "^1.1.2",
    "express": "^5.2.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/supertest": "^6.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^4.0.17",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "jsdom": "^27.4.0",
    "supertest": "^7.2.2",
    "vite": "^5.4.11",
    "vitest": "^4.0.17"
  },
  "build": {
    "appId": "com.sacred.bible-study",
    "productName": "SACRED",
    "directories": {
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.reference",
      "target": [
        "dmg"
      ],
      "icon": "build/icon.png",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "title": "SACRED"
    },
    "files": [
      "dist/**/*",
      "server/**/*",
      "electron/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "node_modules/better-sqlite3/**/*"
    ],
    "npmRebuild": true
  }
}
